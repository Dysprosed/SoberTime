<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.NewDawn" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimaryNight</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDarkNight</item>
        <item name="colorOnPrimary">@android:color/white</item>
        
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorAccentNight</item>
        <item name="colorSecondaryVariant">@color/colorAccentNight</item>
        <item name="colorOnSecondary">@android:color/white</item>
        
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        
        <!-- Card and surface colors -->
        <item name="colorSurface">@color/cardBackgroundNight</item>
        <item name="colorOnSurface">@color/colorTextNight</item>
        
        <!-- Custom theme attributes -->
        <item name="colorBackgroundNight">@color/colorBackgroundNight</item>
        <item name="colorTextLight">@color/colorTextLightNight</item>
    </style>

    <style name="Theme.NewDawn" parent="Base.Theme.NewDawn" />
</resources>