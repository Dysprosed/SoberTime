<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F44336">

    <TextView
        android:id="@+id/intrusiveTitleTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="SOBRIETY CHECK-IN REQUIRED"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:gravity="center"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="48dp"/>

    <TextView
        android:id="@+id/intrusiveDateTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="January 1, 2025"
        android:textSize="20sp"
        android:textColor="#FFFFFF"
        app:layout_constraintTop_toBottomOf="@+id/intrusiveTitleTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp"/>

    <TextView
        android:id="@+id/intrusiveTimeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="12:00 PM"
        android:textSize="20sp"
        android:textColor="#FFFFFF"
        app:layout_constraintTop_toBottomOf="@+id/intrusiveDateTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/intrusiveMessageTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="You must complete your daily check-in to dismiss this alert."
        android:textSize="18sp"
        android:textColor="#FFFFFF"
        android:gravity="center"
        android:padding="24dp"
        app:layout_constraintTop_toBottomOf="@+id/intrusiveTimeTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="48dp"/>

    <Button
        android:id="@+id/intrusiveSoberButton"
        android:layout_width="0dp"
        android:layout_height="64dp"
        android:text="I MAINTAINED SOBRIETY"
        android:textSize="18sp"
        android:textColor="#FFFFFF"
        android:background="@drawable/green_button_background"
        app:layout_constraintBottom_toTopOf="@+id/intrusiveRelapseButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="24dp"/>

    <Button
        android:id="@+id/intrusiveRelapseButton"
        android:layout_width="0dp"
        android:layout_height="64dp"
        android:text="I HAD A RELAPSE"
        android:textSize="18sp"
        android:textColor="#FFFFFF"
        android:background="@drawable/red_button_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="24dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>