<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/widget_background"
    android:padding="16dp">

    <TextView
        android:id="@+id/appwidget_days_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="0"
        android:textColor="@android:color/white"
        android:textSize="36sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/appwidget_days_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/appwidget_days_count"
        android:layout_centerHorizontal="true"
        android:text="Days Sober"
        android:textColor="@android:color/white"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/appwidget_since_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/appwidget_days_label"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="4dp"
        android:text="Sober since: January 1, 2025"
        android:textColor="@android:color/white"
        android:textSize="12sp" />

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/appwidget_since_date"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:background="#40FFFFFF" />

    <TextView
        android:id="@+id/appwidget_next_milestone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/divider"
        android:layout_centerHorizontal="true"
        android:text="Next milestone: 30 days (25 to go)"
        android:textColor="@android:color/white"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/appwidget_quote"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/appwidget_next_milestone"
        android:layout_marginTop="8dp"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="3"
        android:text="Success is the sum of small efforts, repeated day in and day out. â€” Robert Collier"
        android:textColor="@android:color/white"
        android:textSize="12sp"
        android:textStyle="italic" />

</RelativeLayout>
