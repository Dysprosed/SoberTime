<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:fillViewport="true"
    tools:context=".AboutActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:gravity="center_horizontal">

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@mipmap/ic_launcher"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Dawn"
            android:textColor="@color/colorPrimary"
            android:textSize="28sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/versionTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Version: 1.0.0"
            android:textColor="@color/colorText"
            android:textSize="16sp"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/buildDateTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Copyright Â© 2025 Brandon Shaw"
            android:textColor="@color/colorText"
            android:textSize="16sp"
            android:layout_marginBottom="24dp" />    

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="New Dawn is an open-source sobriety tracking app designed to help you in your journey to recovery. It provides tools to track progress, celebrate milestones, and access support when needed."
            android:textColor="@color/colorText"
            android:textSize="16sp"
            android:gravity="left"
            android:layout_marginBottom="16dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="This app was developed using AI assistance from Claude (Anthropic) and is provided as open-source software for the recovery community."
            android:textColor="@color/colorText"
            android:textSize="16sp"
            android:gravity="left"
            android:layout_marginBottom="24dp" />

        <Button
            android:id="@+id/githubButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="View Source on GitHub"
            android:textColor="@android:color/white"
            android:background="@drawable/button_rounded"
            android:layout_marginBottom="16dp" />

        <Button
            android:id="@+id/donateButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Support Development"
            android:textColor="@android:color/white"
            android:background="@drawable/button_rounded"
            android:layout_marginBottom="16dp" />

        <Button
            android:id="@+id/licenseButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="View License and Privacy Policy"
            android:textColor="@color/colorPrimary"
            android:background="@drawable/button_outlined"
            android:layout_marginBottom="32dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="This app is not a substitute for professional medical advice, diagnosis, or treatment."
            android:textColor="@color/colorTextLight"
            android:textSize="14sp"
            android:gravity="center"
            android:layout_marginBottom="16dp" />

    </LinearLayout>
</ScrollView>
